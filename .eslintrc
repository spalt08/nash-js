{
  "env": {
      "browser": true,
      "jest/globals": true
  },
  "extends": [
      "airbnb-typescript"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint",
      "jest"
  ],
  "rules": {
    "no-bitwise": "off",
    "no-underscore-dangle": "off",
    "no-plusplus": "off",
    "max-len": ["error", { "code": 150 }],
    "import/export": "off",
    "prefer-destructuring": "off",
    "no-multi-assign": "off",
    "no-param-reassign": "off",
    "func-names": "off"
  },
  "ignorePatterns": [
      "dist/",
      "example/",
      "tests/",
      "node_modules/"
  ]
}