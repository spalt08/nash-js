{
  "compilerOptions": {
    "noErrorTruncation": true,
    "strict": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": false,
    "target": "es5",
    "baseUrl": "./src",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "esModuleInterop": true,
  },
  "include": [
    "src/*"
  ]
}
